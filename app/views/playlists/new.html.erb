            <td><input id="event_date" name="event[date]" type="text"/></td>
          </tr>
          <tr>
            <td><label for="event_name">Name:</label></td>
            <td><input id="event_name" name="event[name]" type="text" /></td>
          </tr>
          <tr>
            <td><label for="event_details">Details:</label></td>
            <td><input id="event_details" name="event[details]" type="text" /></td>
          </tr>
          <tr>
            <td><label for="event_location">Where:</label></td>
            <td><input id="event_location" name="event[location]" type="text" /></td>
          </tr>
        </tbody>
      </table>
    </form>
    <a href="#" id="go_welcome">Back</a>
    <a href="#" id="pick_tracks">Next Step</a>
